@model Story;
@{
    ViewData["Title"] = "Add Stories";
}

@{
    Layout = "~/Views/Shared/_AddForms.cshtml";
}

<html>
<body>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

    <div class="text-center">
        <br />
        <h1 class="display-4">Add Your Stories</h1>
        <br />
        <h3>A page where fans can share their stories about the LA Dodgers.</h3>
        <br />
    </div>
    <div class="container">
        <div asp-validation-summary="ModelOnly" style="background-color: red"></div>
        <form method="post" asp-controller="Story">
            <div class="form-group">
                <label class="col-md-4 control-label">Title</label>
                <div class="col-md-8 inputGroupContainer">
                    <div class="input-group">
                        <span asp-validation-for="Title"></span>
                        <input asp-for="Title" placeholder="Title" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">StoryTeller</label>
                <div class="col-md-8 inputGroupContainer">
                    <div class="input-group">
                        <span asp-validation-for="StoryTeller"></span>
                        <input asp-for="StoryTeller" placeholder="Your Name" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Story</label>
                <div class="col-md-12 inputGroupContainer">
                    <div class="input-group">
                        <span asp-validation-for="StoryText"></span>
                        <textarea class="form-control" asp-for="StoryText" placeholder="Once upon a time at Dodger Stadium..." rows="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <br>
                    <button type="submit" class="btn btn-warning">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspSUBMIT <span class="glyphicon glyphicon-send"></span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                </div>
            </div>
        </form>
    </div><!-- /.container -->
</body>
</html>