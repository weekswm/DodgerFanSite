@model String
@{
    ViewData["Title"] = "Add Stories";
}

@{
    Layout = "~/Views/Shared/_AddForms.cshtml";
}

<html>
    <body>
        <div class="text-center">
            <br />
            <h1 class="display-4">Add Your Stories</h1>
            <br />
            <h3>A page where fans can share their stories about the LA Dodgers.</h3>
            <br />
        </div>
        <div class="container">
            <form method="post">
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="@Model">Title</label>
                    <div class="col-md-8 inputGroupContainer">
                        <div class="input-group">
                            <input name="title" asp-for="@Model" placeholder="Title" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="@Model">Storyteller</label>
                    <div class="col-md-8 inputGroupContainer">
                        <div class="input-group">
                            <input name="storyTeller" asp-for="@Model" placeholder="Your Name" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="@Model">Story</label>
                    <div class="col-md-12 inputGroupContainer">
                        <div class="input-group">
                            <textarea class="form-control" name="storyText" asp-for="@Model" placeholder="Once upon a time at Dodger Stadium..." rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="@Model"></label>
                    <div class="col-md-4">
                        <br>
                        <button type="submit" class="btn btn-warning">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspSUBMIT <span class="glyphicon glyphicon-send"></span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                    </div>
                </div>
            </form>
        </div><!-- /.container -->
</body>
</html>