
@{
    ViewData["Title"] = "Add Stories";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Add Stories</title>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    </head>
    <body>
        <nav>
            <a class="btn btn-primary" asp-action="Index">Home</a>
            <a class="btn btn-primary" asp-action="History">History</a>
            <a class="btn btn-primary" asp-controller="Sources"asp-action="Sources">Sources</a>
            <a class="btn btn-primary" asp-controller="Story" asp-action="AddStory">Add Stories</a>
            <a class="btn btn-primary" asp-controller="Story" asp-action="ViewStories">View Stories</a>
        </nav>
        <div class="text-center">
            <h1 class="display-4">Add Your Stories</h1>
            <p>This page will have fan can add their stories about the LA Dodgers.</p>
        </div>
        <div class="container">
            <form method="post">
                <label for="title">Title</label>
                <input name="title" /><br />
                <label for="storyTeller">Story Teller</label>
                <input name="storyTeller" /><br />
                <label for="storyText">Fan Story</label>
                <input name="storyText" /><br />
                <input type="submit" value="Enter" />
            </form>
            <a href="ViewStories">Back to the list of stories</a>
        </div><!-- /.container -->
    </body>
</html>