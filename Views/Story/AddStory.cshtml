
@{
    ViewData["Title"] = "Add Stories";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Add Stories</title>
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    </head>
    <body>
        <nav>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Home</a>
            <a class="btn btn-primary" asp-controller="Home" asp-action="History">History</a>
            <a class="btn btn-primary" asp-controller="Sources" asp-action="Sources">Sources</a>
            <a class="btn btn-primary" asp-controller="Story" asp-action="AddStory">Add Stories</a>
            <a class="btn btn-primary" asp-controller="Story" asp-action="ViewStories">View Stories</a>
        </nav>
        <div class="text-center">
            <br />
            <h1 class="display-4">Add Your Stories</h1>
            <br />
            <h3>A page where fans can share their stories about the LA Dodgers.</h3>
            <br />
        </div>
        <div class="container">
            <form method="post">
                <div class="form-group">
                    <label class="col-md-4 control-label">Title</label>
                    <div class="col-md-8 inputGroupContainer">
                        <div class="input-group">
                            <input name="title" placeholder="Title" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Storyteller</label>
                    <div class="col-md-8 inputGroupContainer">
                        <div class="input-group">
                            <input name="storyTeller" placeholder="Your Name" class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label">Story</label>
                    <div class="col-md-12 inputGroupContainer">
                        <div class="input-group">
                            <textarea class="form-control" name="storyText" placeholder="Once upon a time at Dodger Stadium..." rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <br>
                        <button type="submit" class="btn btn-warning">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspSUBMIT <span class="glyphicon glyphicon-send"></span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                    </div>
                    <div class="col-md-4">
                        <br>
                        <a class="btn btn-primary" asp-controller="Story" asp-action="ViewStories">Back to Stories</a>
                    </div>
                </div>
